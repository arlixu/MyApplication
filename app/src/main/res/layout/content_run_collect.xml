<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RunCollectActivity"
    tools:showIn="@layout/activity_run_collect">
    <TextView
        android:id="@+id/tv_collect_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/collect_introduce"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/bt_collect_speed_1"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/collect_speed_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_introduce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/bt_collect_speed_2"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/collect_speed_2"
        app:layout_constraintTop_toBottomOf="@+id/bt_collect_speed_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_collect_speed_3"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/bt_collect_speed_2"
        android:text="@string/collect_speed_3" />

</android.support.constraint.ConstraintLayout>